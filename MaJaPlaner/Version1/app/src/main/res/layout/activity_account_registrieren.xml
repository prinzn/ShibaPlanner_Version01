<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hintergrund_farbe"
    tools:context=".Account_Registrieren">

    <ImageView
        android:id="@+id/imageView_accErstellen_logo"

        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_mit_hintergrund" />

    <EditText
        android:id="@+id/editText_accErstellen_email"

        style="@style/SchriftTerminverwaltung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_email_24dp"
        android:gravity="center"
        android:hint="@string/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_accErstellen_logo"/>

    <EditText
        android:id="@+id/editText_accErstellen_nutzername"

        style="@style/SchriftTerminverwaltung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/ic_person_24dp"
        android:gravity="center"
        android:hint="@string/nutzername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_accErstellen_email"/>

    <EditText
        android:id="@+id/editText_accErstellen_passwort"

        style="@style/SchriftTerminverwaltung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/ic_lock_24dp"
        android:gravity="center"
        android:hint="@string/passwort"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_accErstellen_nutzername" />

    <Button
        android:id="@+id/btn_accErstellen"

        style="@style/SchriftTerminverwaltung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:background="@drawable/einloggen_button_hintergrund"
        android:gravity="center"
        android:text="@string/erstellen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_accErstellen_passwort" />

    <TextView
        android:id="@+id/txt_accErstellen_bereitsAccount"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/hussartani"
        android:text="@string/bereitsaccount"
        android:textColor="@color/blaugrau"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_accErstellen_ZuLogIn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/hussartani"
        android:text="@string/einloggen"
        android:textColor="@color/blaugrau"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_accErstellen_bereitsAccount" />

</android.support.constraint.ConstraintLayout>