<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- - - - - - - - - - Schriftstyles - - - - - - - -->
    <style name="SchriftStandard">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/hussartani</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SchriftStartbildschirm">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blaugrau</item>
        <item name="android:fontFamily">@font/hussartani</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SchriftTerminverwaltung">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blaugrau</item>
        <item name="android:fontFamily">@font/hussartani</item>
    </style>

    <style name="WochentageStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blaugrauTransparent</item>
        <item name="android:fontFamily">@font/hussartani</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
